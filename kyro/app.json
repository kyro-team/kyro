{
  "expo": {
    "name": "kyro",
    "slug": "kyro",
    "scheme": "kyro",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.kyro",
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "Kyro uses speech recognition to transcribe your voice reflections.",
        "NSMicrophoneUsageDescription": "Kyro needs access to your microphone to record your voice reflections."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.kyro",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font",
      "expo-speech-recognition",
      "expo-asset"
    ]
  }
}
